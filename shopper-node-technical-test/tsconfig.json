{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "outDir": "./dist",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noImplicitAny": true,
      "strictNullChecks": false,
      "skipLibCheck": true,
      "removeComments": true,
    },
    "include": ["src/**/*.ts", "tests/**/*.ts", "prisma/**/*.ts", "tests/app.test.mts"],
    "exclude": ["shopper-node-technical-test/node_modules"]
  }
  